<h1>New Entry for <%= @place.name %></h1>

<%= form_with(model: [@place, @entry], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, id: :entry_title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :occurred_on, class: 'form-label' %>
    <%= form.date_field :occurred_on, id: :entry_occurred_on, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, id: :entry_description, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit 'Create Entry', class: 'btn btn-primary' %>
  </div>
<% end %>

<p>
  <%= link_to 'Back to Place', place_path(@place) %>
</p>
