<h1><%= @place.name %></h1>
<h2>Entries</h2>
<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-sm-6 col-md-3">
      <h3><%= entry.title %></h3>
      <p><%= entry.description %></p>
      <p><%= entry.occurred_on %></p>
      <% if entry.uploaded_image.attached? %>
        <%= image_tag entry.uploaded_image, class: 'img-fluid' %>
      <% end %>
    </div>
  <% end %>
</div>

<h2>New Entry</h2>
<%= form_with(model: [@place, @entry], local: true, class: 'form', multipart: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :occurred_on, class: 'form-label' %>
    <%= form.date_select :occurred_on, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :uploaded_image, class: 'form-label' %>
    <%= form.file_field :uploaded_image, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit 'Add Entry', class: 'btn btn-primary' %>
  </div>
<% end %>
