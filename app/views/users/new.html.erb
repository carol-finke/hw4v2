<h1>Signup</h1>
<%= form_with(model: @user, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :username, class: 'form-label' %>
    <%= form.text_field :username, name: 'user[username]', id: :user_username, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, name: 'user[email]', id: :user_email, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, name: 'user[password]', id: :user_password, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit 'Signup', class: 'btn btn-primary' %>
  </div>
<% end %>
